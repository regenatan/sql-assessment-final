{{#extends 'base'}}
{{#block 'content'}}


  <h1>Add new customers</h1>

  <form method="POST">
    <div class="mb-3">
      <label>First Name</label>
      <input type="text" class="form-control" name="first_name">
    </div>
    <div class="mb-3">
      <label>Last Name</label>
      <input type="text" class="form-control" name="last_name">
    </div>
    <div class="mb-3">
      <label>Rating</label>
      <input type="text" class="form-control" name="rating">
    </div>
    <div class="mb-3">
      <label>Company</label>
      <select name="company_id" class="form-select w-100">
        {{#each companies}}
        <option value="{{this.company_id}}"">{{this.name}}</option>
        {{/each}}

      </select>
    </div>
    <input type="submit" class="btn btn-primary mt-3" />
  </form>

{{/block}}
{{/extends}}
